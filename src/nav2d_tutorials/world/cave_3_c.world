include "p3at.inc"
include "floorplan.inc"


name                    "Navigation-2D Multi-Robot Tutorial"
interval_sim            100
quit_time                 0
resolution                0.025
show_clock                0
show_clock_interval     100
threads                 2

window
(
  size [ 443 466 ] # in pixels
  scale 12.724   # pixels per meter
  center [ 0.271  -0.418 ]
  rotate [ 0.000  0.000 ]
  			
  show_data 1              # 1=on 0=off
)

# Load an environment bitmap
floorplan
( 
  name "cave"
  size [30.000 30.000 0.800]
  pose [0.000 0.000 0.000 0.000]
  bitmap "worlds/bitmaps/cave_new_.png"
)

# Put two robots into the world
pioneer3at
(
  name "robot1"
  pose [-10.000 0.000 0.000 45.000]
  
)

# Put two robots into the world
pioneer3at
(
  name "robot2"
  pose [-12.000 0.000 0.000 45.000]
)

pioneer3at
(
  name "robot3"
  pose [-8.000 0.000 0.000 0.000]
)

pioneer3at
(
  name "robot4"
  pose [-12.000 2.000 0.000 0.000]
)